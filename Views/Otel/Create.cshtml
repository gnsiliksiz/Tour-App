@if (Session["userID"] == null)
{
    Response.Redirect("~/Hata/InsufficientPrivileges");
}
@model TourApp.Models.Otel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using (Html.BeginForm("Create", "Otel", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section id="vertical-wizard">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Otel Tanımlama</h4>
            </div>
            <div class="card-content">
                <div class="card-body">
                    <div class="wizard-vertical">
                        <!-- step 1 -->
                        <h3>
                            <span class="mr-2">
                                <img src="~/frest-admin-v1.0/app-assets/fonts/LivIconsEvo/svg/notebook.svg" height="70" />
                            </span>

                            <span class="icon-title">
                                <span class="d-block">Genel Bilgiler</span>
                                <small class="text-muted">Otel Bilgilerini Giriniz</small>
                            </span>
                        </h3>
                        <!-- step 1 end-->
                        <!-- step 1 content -->
                        <fieldset class="pt-0">
                            <h6 class="pb-50">Otel Bilgileri</h6>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>Otel Adi</label>
                                        @Html.TextBox("otelAd", null, new { @placeholder = "Otel Adı", @class = "form-control", @required = "required" })
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>Yıldız</label>
                                        <select class="custom-select form-control" id="otelTip" name="otelTip">
                                            <option value="1">1 Yıldız</option>
                                            <option value="2">2 Yıldız</option>
                                            <option value="3">3 Yıldız</option>
                                            <option value="4">4 Yıldız</option>
                                            <option value="5">5 Yıldız</option>
                                            <option value="7">7 Yıldız</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>Para Birimi</label>
                                        <select class="custom-select form-control" id="otelFiyatBirimi" name="otelFiyatBirimi">
                                            <option value="Tl (₺)">Tl (₺)</option>
                                            <option value="Euro (€)">Euro (€)</option>
                                            <option value="Dolar ($)">Dolar ($)</option>
                                            <option value="Rus Rublesi (рубль9)">Rus Rublesi (рубль)</option>
                                            <option value="Sterlin (£)">Sterlin (£)</option>
                                            <option value="Yuan (¥)">Yuan (¥)</option>
                                            <option value="Leva (лв)">Bulgaristan Levası (лв)</option>
                                            <option value="İran Riyali ﷼">İran Riyali (﷼)</option>
                                            <option value="SAR ﷼">Suudi Arabistan Riyali (﷼)</option>
                                            <option value="Grivna ₴">Ukrayna Grivnası (₴)</option>
                                            <option value="Katar Riyali ﷼">Katar Riyali (﷼)</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <label>Fotoğraf Seçiniz</label>
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" name="otelResim" id="otelResim" value="" accept=".jpg,.png,.gif,.JPEG,.jpeg" />
                                        <label class="custom-file-label" for="">Dosya Seçiniz</label>
                                    </div>
                                </div>
                            </div>

                        </fieldset>
                        <!-- step 1 content end-->
                        <!-- step 2 -->
                        <h3>
                            <span class="mr-2">
                                <img src="~/frest-admin-v1.0/app-assets/fonts/LivIconsEvo/svg/location.svg" height="70" />
                            </span>
                            <span class="icon-title">
                                <span class="d-block">İletişim Bilgileri</span>
                                <small class="text-muted">İl İlçe Adres Bilgilerini Giriniz.</small>
                            </span>
                        </h3>
                        <!-- step 2 end-->
                        <!-- step 2 content -->
                        <fieldset class="pt-0">
                            <h6 class="py-50">İletişim Bilgileri</h6>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Telefon</label>
                                        @Html.TextBox("otelTelefon", null, new { @placeholder = "Telefon", @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.otelTelefon, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="jobtitle">Adres</label>
                                        @Html.TextBox("otelAdres", null, new { @placeholder = "Adres", @class = "form-control" })
                                    </div>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>İl</label>
                                        <select class="custom-select form-control" id="otelIl" name="otelIl">
                                            <option value="">------</option>
                                            <option value="Adana">Adana</option>
                                            <option value="Adıyaman">Adıyaman</option>
                                            <option value="Afyonkarahisar">Afyonkarahisar</option>
                                            <option value="Ağrı">Ağrı</option>
                                            <option value="Amasya">Amasya</option>
                                            <option value="Ankara">Ankara</option>
                                            <option value="Antalya">Antalya</option>
                                            <option value="Artvin">Artvin</option>
                                            <option value="Aydın">Aydın</option>
                                            <option value="Balıkesir">Balıkesir</option>
                                            <option value="Bilecik">Bilecik</option>
                                            <option value="Bingöl">Bingöl</option>
                                            <option value="Bitlis">Bitlis</option>
                                            <option value="Bolu">Bolu</option>
                                            <option value="Burdur">Burdur</option>
                                            <option value="Bursa">Bursa</option>
                                            <option value="Çanakkale">Çanakkale</option>
                                            <option value="Çankırı">Çankırı</option>
                                            <option value="Çorum">Çorum</option>
                                            <option value="Denizli">Denizli</option>
                                            <option value="Diyarbakır">Diyarbakır</option>
                                            <option value="Edirne">Edirne</option>
                                            <option value="Elazığ">Elazığ</option>
                                            <option value="Erzincan">Erzincan</option>
                                            <option value="Erzurum">Erzurum</option>
                                            <option value="Eskişehir">Eskişehir</option>
                                            <option value="Gaziantep">Gaziantep</option>
                                            <option value="Giresun">Giresun</option>
                                            <option value="Gümüşhane">Gümüşhane</option>
                                            <option value="Hakkâri">Hakkâri</option>
                                            <option value="Hatay">Hatay</option>
                                            <option value="Isparta">Isparta</option>
                                            <option value="Mersin">Mersin</option>
                                            <option value="İstanbul">İstanbul</option>
                                            <option value="İzmir">İzmir</option>
                                            <option value="Kars">Kars</option>
                                            <option value="Kastamonu">Kastamonu</option>
                                            <option value="Kayseri">Kayseri</option>
                                            <option value="Kırklareli">Kırklareli</option>
                                            <option value="Kırşehir">Kırşehir</option>
                                            <option value="Kocaeli">Kocaeli</option>
                                            <option value="Konya">Konya</option>
                                            <option value="Kütahya">Kütahya</option>
                                            <option value="Malatya">Malatya</option>
                                            <option value="Manisa">Manisa</option>
                                            <option value="Kahramanmaraş">Kahramanmaraş</option>
                                            <option value="Mardin">Mardin</option>
                                            <option value="Muğla">Muğla</option>
                                            <option value="Muş">Muş</option>
                                            <option value="Nevşehir">Nevşehir</option>
                                            <option value="51">Niğde</option>
                                            <option value="Ordu">Ordu</option>
                                            <option value="Rize">Rize</option>
                                            <option value="Sakarya">Sakarya</option>
                                            <option value="Samsun">Samsun</option>
                                            <option value="Siirt">Siirt</option>
                                            <option value="Sinop">Sinop</option>
                                            <option value="Sivas">Sivas</option>
                                            <option value="Tekirdağ">Tekirdağ</option>
                                            <option value="Tokat">Tokat</option>
                                            <option value="Trabzon">Trabzon</option>
                                            <option value="Tunceli">Tunceli</option>
                                            <option value="Şanlıurfa">Şanlıurfa</option>
                                            <option value="Uşak">Uşak</option>
                                            <option value="Van">Van</option>
                                            <option value="Yozgat">Yozgat</option>
                                            <option value="Zonguldak">Zonguldak</option>
                                            <option value="Aksaray">Aksaray</option>
                                            <option value="Bayburt">Bayburt</option>
                                            <option value="Karaman">Karaman</option>
                                            <option value="Kırıkkale">Kırıkkale</option>
                                            <option value="Batman">Batman</option>
                                            <option value="Şırnak">Şırnak</option>
                                            <option value="Bartın">Bartın</option>
                                            <option value="Ardahan">Ardahan</option>
                                            <option value="Iğdır">Iğdır</option>
                                            <option value="Yalova">Yalova</option>
                                            <option value="Karabük">Karabük</option>
                                            <option value="Kilis">Kilis</option>
                                            <option value="Osmaniye">Osmaniye</option>
                                            <option value="Düzce">Düzce</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>İl</label>
                                        @Html.TextBox("otelIlce", null, new { @placeholder = "İlçe", @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                        <!-- step 2 content end-->
                        <!-- section 3 -->
                        <h3>
                            <span class="mr-2">
                                <img src="~/frest-admin-v1.0/app-assets/fonts/LivIconsEvo/svg/euro.svg" height="70" />
                            </span>
                            <span class="icon-title">
                                <span class="d-block">Fiyat Bilgileri</span>
                                <small class="text-muted">Oda Türlerine Göre Fiyat Belirle</small>
                            </span>
                        </h3>
                        <!-- section 3 end-->
                        <!-- step 3 content -->
                        <fieldset class="pt-0">
                            <h6 class="py-50">Gecelik Fiyatları Belirleyin.</h6>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Single Room</label>
                                        @Html.TextBox("otelSingleRoomFiyat", null, new { @placeholder = "Single Room", @class = "form-control", @type = "number" })
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Double Room</label>
                                        @Html.TextBox("otelDoubleRoomFiyat", null, new { @placeholder = "Double Room", @class = "form-control", @type = "number" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>King Suit</label>
                                        @Html.TextBox("otelKingSuitFiyat", null, new { @placeholder = "King Suit", @class = "form-control", @type = "number" })
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Family Room</label>
                                        @Html.TextBox("otelFamilyRoomFiyat", null, new { @placeholder = "Family Room", @class = "form-control", @type = "number" })
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                        <!-- step 3 content end-->

                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Kaydet" class="btn btn-danger" />
        </div>
    </div>
    <div>
        @Html.ActionLink("Geri Dön", "Index")
    </div>
}



